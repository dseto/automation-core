{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "resolved.metadata.json",
  "type": "object",
  "required": [
    "version",
    "generatedAt",
    "source",
    "steps"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "generatedAt": {
      "type": "string"
    },
    "source": {
      "type": "object",
      "required": [
        "draftFeaturePath"
      ],
      "properties": {
        "draftFeaturePath": {
          "type": "string"
        },
        "uiMapPath": {
          "type": "string"
        },
        "sessionPath": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "draftLine",
          "status",
          "stepText"
        ],
        "properties": {
          "draftLine": {
            "type": "integer",
            "minimum": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "resolved",
              "partial",
              "unresolved"
            ]
          },
          "stepText": {
            "type": "string"
          },
          "chosen": {
            "type": [
              "object",
              "null"
            ],
            "properties": {
              "pageKey": {
                "type": "string"
              },
              "elementKey": {
                "type": "string"
              },
              "testId": {
                "type": [
                  "string",
                  "null"
                ]
              }
            }
          },
          "candidates": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "pageKey",
                "elementKey"
              ],
              "properties": {
                "pageKey": {
                  "type": "string"
                },
                "elementKey": {
                  "type": "string"
                },
                "testId": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              }
            }
          },
          "findings": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "severity",
                "code",
                "message"
              ],
              "properties": {
                "severity": {
                  "type": "string",
                  "enum": [
                    "error",
                    "warn",
                    "info"
                  ]
                },
                "code": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
