{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/recorder.session.schema.json",
  "title": "RecorderSession",
  "type": "object",
  "required": [
    "sessionId",
    "events"
  ],
  "properties": {
    "sessionId": {
      "type": "string"
    },
    "startedAt": {
      "type": "string",
      "format": "date-time"
    },
    "endedAt": {
      "type": "string",
      "format": "date-time"
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/event"
      }
    }
  },
  "$defs": {
    "event": {
      "type": "object",
      "required": [
        "t",
        "type"
      ],
      "properties": {
        "t": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "navigate",
            "click",
            "fill",
            "select",
            "toggle",
            "submit",
            "modal_open",
            "modal_close"
          ]
        },
        "route": {
          "type": [
            "string",
            "null"
          ]
        },
        "target": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "value": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "rawAction": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  }
}
