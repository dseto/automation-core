{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/recorder.session.schema.json",
  "title": "RecorderSession",
  "type": "object",
  "required": [
    "sessionId",
    "events"
  ],
  "properties": {
    "sessionId": {
      "type": "string"
    },
    "startedAt": {
      "type": "string",
      "format": "date-time"
    },
    "endedAt": {
      "type": "string",
      "format": "date-time"
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/event"
      }
    }
  },
  "$defs": {
    "event": {
      "type": "object",
      "required": [
        "t",
        "type"
      ],
      "properties": {
        "t": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "navigate",
            "click",
            "fill",
            "select",
            "toggle",
            "submit",
            "modal_open",
            "modal_close"
          ]
        },
        "route": {
          "type": [
            "string",
            "null"
          ],
          "description": "Rota canônica determinística: pathname + fragment (quando fragment != null)."
        },
        "target": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "value": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "rawAction": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": true
        },
        "waitMs": {
          "type": "integer",
          "minimum": 0,
          "description": "Tempo de inatividade (idle) desde o evento anterior, em milissegundos. Emitido apenas quando acima do threshold configurado."
        },
        "url": {
          "type": "string",
          "description": "URL absoluta observada pelo browser no momento do navigate."
        },
        "pathname": {
          "type": "string",
          "description": "Pathname normalizado (sempre inicia com '/')."
        },
        "fragment": {
          "type": [
            "string",
            "null"
          ],
          "description": "Fragmento (inclui '#') quando presente; null quando ausente."
        }
      },
      "additionalProperties": false,
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "navigate"
              }
            }
          },
          "then": {
            "required": [
              "route",
              "url",
              "pathname",
              "fragment"
            ]
          }
        }
      ]
    }
  }
}
